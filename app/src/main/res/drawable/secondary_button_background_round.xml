<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--TODO: Add animation for different state-->

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/INTILightGrey" /> <!-- Background color when focused -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Default background color -->
            <corners android:radius="10dp"/>

        </shape>
    </item>
</selector>
