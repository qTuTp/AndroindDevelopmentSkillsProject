<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/INTIRed</item>
        <item name="colorPrimaryDark">@color/INTIGrey</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="inti">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="inti2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="regularWord">  <!--This is for text of the label for input field-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/INTIGrey</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="buttonTextWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="buttonTextRed">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/INTIRed</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="carPlateText">

        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/chakra_petch_bold</item>
    </style>

    <style name="vacancyLabel">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="percentageLabel">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="primaryDay">
        <item name="fontFamily">@font/inter_extrabold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/INTIRed</item>

    </style>

    <style name="secondaryDay">
        <item name="fontFamily">@font/inter_extrabold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/INTILightGrey2</item>

    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


</resources>